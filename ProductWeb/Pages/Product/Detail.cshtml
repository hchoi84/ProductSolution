@page "{id:int}"
@model ProductWeb.Pages.Product.DetailModel
@{
  ViewData["Title"] = "Detail";
}

<h1>Details</h1>

<div>
  <h4>Product</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Product.Name)
    </dt>
    <dd class="col-sm-10" id="Name">
      @Html.DisplayFor(model => model.Product.Name)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Product.Description)
    </dt>
    <dd class="col-sm-10" id="Description">
      @Html.DisplayFor(model => model.Product.Description)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Product.Price)
    </dt>
    <dd class="col-sm-10" id="Price">
      @Html.DisplayFor(model => model.Product.Price)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Product.ProductType)
    </dt>
    <dd class="col-sm-10" id="ProductType">
      @Html.DisplayFor(model => model.Product.ProductType)
    </dd>
